# RecruitAI Backend Environment Variables
# Copy this file to .env and update the values

# App Settings
DEBUG=False
SECRET_KEY=your-super-secret-key-change-this-in-production

# Database
DATABASE_URL=sqlite:///./recruitai.db
# For PostgreSQL: postgresql://user:password@localhost/recruitai
# For Render PostgreSQL: Use the DATABASE_URL from Render dashboard

# JWT Settings
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# AI Providers (Multi-provider setup with intelligent fallbacks)
# Primary: Google AI (comprehensive analysis)
GOOGLE_AI_API_KEY=your-google-ai-api-key-here

# Secondary: DeepSeek (cost-effective, good performance)
DEEPSEEK_API_KEY=your-deepseek-api-key-here

# Tertiary: OpenAI (high quality, fallback)
OPENAI_API_KEY=your-openai-api-key-here

# Note: System automatically falls back to offline matching if no API keys available

# File Upload Settings
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760
# Allowed extensions: .pdf,.doc,.docx,.txt

# Credit System
FREE_CREDITS_ON_SIGNUP=10
CREDIT_COST_PER_RESUME_ANALYSIS=1
CREDIT_COST_PER_INTERVIEW=3
CREDIT_COST_PER_AI_MATCHING=1
CREDIT_COST_USD=0.10

# AI Settings
RESUME_MATCH_THRESHOLD=0.7

# Security Settings
ALLOWED_HOSTS=*
ALLOWED_ORIGINS=*
# For production, specify exact hosts and origins:
# ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com
# ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Email Settings (Optional)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=

# Render Deployment Settings
PORT=8000

