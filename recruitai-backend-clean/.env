# RecruitAI Backend - Clean Production Environment
# All API keys will be set in deployment environment variables

# App Settings
DEBUG=False
SECRET_KEY=your-secret-key-here

# Database (Will be overridden by Render's DATABASE_URL)
DATABASE_URL=sqlite:///./recruitai.db

# JWT Settings
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# AI Providers (Set these in Render environment variables)
# DEEPSEEK_API_KEY=your-deepseek-key
# OPENAI_API_KEY=your-openai-key  
# GOOGLE_AI_API_KEY=your-google-ai-key

# File Upload Settings
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760

# Credit System
FREE_CREDITS_ON_SIGNUP=10
CREDIT_COST_PER_RESUME_ANALYSIS=1
CREDIT_COST_PER_INTERVIEW=3
CREDIT_COST_PER_AI_MATCHING=1
CREDIT_COST_USD=0.10

# AI Settings
RESUME_MATCH_THRESHOLD=0.7

# Security Settings
ALLOWED_HOSTS=*
ALLOWED_ORIGINS=*

# Render Settings
PORT=8000

